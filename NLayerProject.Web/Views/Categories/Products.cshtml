@model CategoryWithProductsDto
@{
    ViewData["Title"] = "GetProducts";
}
<h1>@Model.Name 'a ait Ürünler</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Ürün Ekle</a>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Stok</th>
            @*<th>İşlemler</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                @*<td>
                    <a class="btn btn-warning p-sm-2" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-danger p-sm-2" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>*@

            </tr>
        }
    </tbody>
</table>

